source 'https://rubygems.org'

git 'git://github.com/rails/rails.git' do
  gem 'railties'
  gem 'activerecord', :require => 'active_record'
  gem 'actionview', :require => 'action_view'
end

platforms :ruby, :rbx do
  gem 'sqlite3'
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end

gem 'rspec-rails', '>= 2.0'

gemspec :path => '../'
