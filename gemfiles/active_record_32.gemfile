source 'https://rubygems.org'

gem 'railties', '~> 3.2.3'
gem 'activerecord', '~> 3.2.3', :require => 'active_record'
gem 'rspec-rails', '>= 2.0'
gem 'xpath'

# Stick To Versions That Work Under Ruby 1.8 For Now
gem 'capybara', '< 2.1'
gem 'nokogiri', '< 1.6'
gem 'rubyzip', '< 1'
gem 'mime-types', '< 2'

platforms :ruby, :rbx do
  gem 'sqlite3'
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end

gemspec :path => '../'
